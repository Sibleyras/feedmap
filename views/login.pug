extends layout

block content
    div.row.justify-content-center.pt-3
        div.col-6.col-sm-5.col-md-4.col-lg-3.border
            if user
                h2.green Bienvenue #{user.username}.
            else
                h2.red Veuillez vous authentifier.
            include dist/login.html
    .row.justify-content-center
        .col-6.col-sm-5.col-md-4.col-lg-3
            if err
                p.alert #{err}